class Solution
{
   public:
    string ReFormatString(string S, int K){
    	
     	int n = S.size();
        string temp = "";
        
        for(int i = 0 ; i< n ;i++){
            
            if(S[i] != '-'){
             temp += toupper(S[i]);
            }
        }
     
        string ans = "";
        int cnt = 1;
        
        for(int i = temp.size()-1; i >= 0; i--){
            
            if(cnt == K+1 ){
                ans += '-';
                cnt = 1;
            }
              ans += temp[i];
              cnt++;
        }
      
        reverse(ans.begin(),ans.end());
    	return ans;
    }
};
